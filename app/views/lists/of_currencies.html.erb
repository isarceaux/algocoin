<div class="container">
  <h1>List of currencies</h1>
  <p>Voici la liste de toutes les currencies disponibles sur Poloniex</p>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th class="background-grey">Code</th>
        <th>Nom</th>
      </tr>
    </thead>
    <% @currencies.each do |c| %>
    <tr>
      <td><%= c.id %></td>
      <td class="background-grey"><%= c.code %></td>
      <td><%= c.name %></td>
    </tr>  
    <% end %>
  </table>
</div>
