<div class="container">
  <h1>List of pairs</h1>
  <p>Voici la liste de toutes les paires disponibles sur Poloniex</p>

  <table>
    <thead>
      <tr>
        <th></th>
        <th colspan="2">Currency 1</th>
        <th colspan="2">Currency 2</th>
      </tr>
      <tr>
        <th>ID</th>
        <th class="background-grey">Code</th>
        <th>Nom</th>
        <th class="background-grey">Code</th>
        <th>Nom</th>
    </thead>
    <% n = 1 %>
    <% @pairs.each do |pair| %>
    <tr>
      <td><%= n %></td>
      <td class="background-grey"><%= pair.first_currency.code %></td>
      <td><%= pair.first_currency.name %></td>
      <td class="background-grey"><%= pair.second_currency.code %></td>
      <td><%= pair.second_currency.name %></td>
    </tr>  
    <% n += 1 %>
    <% end %>
  </table>
</div>
