<!DOCTYPE html>
<html>
  <head>
    <title>Crypto</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://cdn.datatables.net/buttons/1.4.2/css/buttons.dataTables.min.css' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>

  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'https://cdn.datatables.net/buttons/1.4.2/js/dataTables.buttons.min.js' %>
  <%= javascript_include_tag '//cdn.datatables.net/buttons/1.4.2/js/buttons.flash.min.js' %>
  <%= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js' %>
  <%= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/pdfmake.min.js' %>
  <%= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/vfs_fonts.js' %>
  <%= javascript_include_tag '//cdn.datatables.net/buttons/1.4.2/js/buttons.html5.min.js' %>
  <%= javascript_include_tag '//cdn.datatables.net/buttons/1.4.2/js/buttons.print.min.js' %>

</html>
